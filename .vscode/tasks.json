{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run",
      "type": "shell",
      "command": "python3 -m esphome dashboard config/",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "shell",
      "command": "python3 setup.py install && esphome compile ../esp_home_projects/van/van.yaml",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "clang-tidy",
      "type": "shell",
      "command": "./script/clang-tidy",
      "problemMatcher": [
        {
          "owner": "clang-tidy",
          "fileLocation": "absolute",
          "pattern": [
            {
              "regexp": "^(.*):(\\d+):(\\d+):\\s+(error):\\s+(.*) \\[([a-z0-9,\\-]+)\\]\\s*$",
              "file": 1,
              "line": 2,
              "column": 3,
              "severity": 4,
              "message": 5
            }
          ]
        }
      ]
    }
  ]
}
